<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Dashboard </h3>

    <form class="form new-entry-form">
      <div class="form-group">
        <label for="entry-title">Title:</label>
        <input class="form-input" type="text" id="entry-title" name="entry-title" />
      </div>
      <div class="form-group">
        <label for="entry-desc">Description:</label>
        <textarea class="form-input" id="entry-desc" name="entry-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post me!</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each entries as |entry|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{entry.id}}">{{entry.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{entry.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>